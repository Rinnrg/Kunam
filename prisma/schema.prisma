generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id            Int       @id @default(autoincrement())
  email         String    @unique
  password      String?   // Null for OAuth users
  name          String?
  phone         String?   // Nomor telepon
  image         String?   // Profile image URL
  provider      String    @default("credentials") // credentials, google
  providerId    String?   // Google ID for OAuth users
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  wishlist      Wishlist[]
  cart          Cart[]
  
  @@index([email])
  @@map("users")
}

model Wishlist {
  id        Int      @id @default(autoincrement())
  userId    Int
  produkId  String
  createdAt DateTime @default(now())
  
  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  produk    Produk   @relation(fields: [produkId], references: [id], onDelete: Cascade)
  
  @@unique([userId, produkId])
  @@index([userId])
  @@index([produkId])
  @@map("wishlists")
}

model Cart {
  id        Int      @id @default(autoincrement())
  userId    Int
  produkId  String
  quantity  Int      @default(1)
  ukuran    String?  // Selected size
  warna     String?  // Selected color
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  produk    Produk   @relation(fields: [produkId], references: [id], onDelete: Cascade)
  
  @@unique([userId, produkId, ukuran, warna])
  @@index([userId])
  @@index([produkId])
  @@map("carts")
}

model Produk {
  id              String   @id @default(cuid())
  nama            String   // Nama produk
  kategori        String   // Kategori: T-Shirt, Hoodie, Jacket, Pants, Shorts, Accessories
  harga           Float    // Harga dalam Rupiah
  diskon          Float    @default(0) // Diskon dalam persen (0-100)
  stok            Int      @default(0) // Total stok tersedia
  deskripsi       String?  @db.Text // Deskripsi produk (opsional)
  ukuran          String[] // Array format: ["S:3", "M:5", "L:4"] (ukuran:jumlah)
  warna           String[] // Array warna: ["Hitam", "Putih", "Merah"]
  gambar          String[] // Array URL gambar produk
  video           String[] // Array URL video produk (opsional)
  produkUnggulan  Boolean  @default(false) // Produk unggulan untuk homepage
  urutanTampilan  Int      @default(0) // Urutan tampilan produk
  tanggalDibuat   DateTime @default(now())
  tanggalDiubah   DateTime @updatedAt
  
  // Relations
  wishlist        Wishlist[]
  cart            Cart[]

  @@index([urutanTampilan])
  @@index([produkUnggulan])
  @@index([kategori])
  @@index([diskon])
  @@map("produk")
}
